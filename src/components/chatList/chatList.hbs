<!--Левая сторона общее-->
<ul class="chat-list">
    {{#each chats }}
        {{{ ChatItem
                name=this.name
                message=this.message
                time=this.time
                unread_count=this.unread_count
                isActiveChat=this.isActiveChat
                sendMessage=this.sendMessage
                user_avatar=this.user_avatar
                onClick=../handleChatClick
        }}}
    {{/each}}
</ul>

