<!--страница чата общее-->
<main class="list-container">
    <!--    Левая сторона -->
    <div class="left">
        <div class="list-container__head">
            {{{ ModalCreateChat onSave=onSave onClose=closeModal ref="createChat"}}}
            <div class="list-container__profile-block">
                {{{
                    Button
                        text="Перейти в Профиль"
                        type=link
                        onClick=handleProfileClick
                }}}
            </div>

            <div>
                {{{ Search }}}
            </div>
            <div class="list-container__button">
                {{{
                Button
                        primary="true"
                        text="Создать чат"
                        type="button"
                        onClick=openModal
                }}}
            </div>
        </div>
        <!--Список чатов-->
        <nav>
            {{#ChatList chats=chats handleChatClick=handleChatClick}}{{/ChatList}}
        </nav>
    </div>
    <!--Правая сторона-->
    <div class="right">
        {{{ Chat }}}
    </div>
</main>
