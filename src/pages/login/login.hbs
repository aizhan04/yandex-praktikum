<main class="container">
    {{#> FormAuth}}
        <h1>Вход</h1>

        {{{
           InputField
                name="login"
                label="Логин"
                id="login"
                type="text"
                env="registration"
                ref="login"
                validate=validate.login
        }}}

        {{{
             InputField
                name="password"
                label="Пароль"
                type="password"
                env="registration"
                ref="password"
                validate=validate.password
        }}}

        {{{
            Button
                text="Авторизоваться"
                type="primary"
                onClick=handleLogin
        }}}

        {{{
            Button
                text="Регистрация"
                type="link"
                onClick=handleRegister
        }}}
    {{/FormAuth}}
</main>

