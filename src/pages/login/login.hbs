<main class="container">
    {{#> FormAuth}}
        <h1>Вход</h1>

       <div>
           {{{
           InputField
                   name="login"
                   label="Логин"
                   id="login"
                   type="text"
                   env="registration"
                   ref="login"
                   validate=validate.login
           }}}

           {{{
           InputField
                   name="password"
                   label="Пароль"
                   type="password"
                   env="registration"
                   ref="password"
                   validate=validate.password
           }}}
       </div>

        <div class="button-block">
            {{{
            Button
                    text="Авторизоваться"
                    type="primary"
                    onClick=handleLogin
            }}}

            {{{
            Button
                    text="Регистрация"
                    type="link"
                    onClick=handleRegister
            }}}
        </div>
    {{/FormAuth}}
</main>

