<main class="profile">
    {{{ Back onClick=handleBackClick }}}
    <form class="profile__content">
        <div>
            {{{ Avatar img=user.avatar }}}
        </div>
        <div class="profile__content-input">
            {{{
                InputField
                    name="oldPassword"
                    label="Старый пароль"
                    type="password"
                    env="profile"
                    ref="oldPassword"
                    placeholder="Старый пароль"
                    validate=validate.oldPassword
            }}}

            {{{
                InputField
                    name="newPassword"
                    label="Новый пароль"
                    type="password"
                    env="profile"
                    placeholder="Новый пароль"
                    ref="newPassword"
                    validate=validate.newPassword
            }}}

            {{{
                InputField
                    name="repeatNewPassword"
                    label="Повторите новый пароль"
                    type="password"
                    env="profile"
                    placeholder="Повторите пароль"
                    ref="repeatNewPassword"
                    validate=validate.repeatNewPassword
            }}}
        </div>
        <div>
            {{{ ErrorText error=error ref="errorText"}}}
            {{{ SuccessText success=success ref="successText" }}}
        </div>
        <div class="profile__content-button">
            {{{
                Button
                    text="Сохранить пароль"
                    type="primary"
                    onClick=handleSaveChangesClick
            }}}
        </div>
    </form>
</main>
