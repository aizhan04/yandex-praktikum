<main class="profile">
    {{{ Back onClick=handleBackClick }}}
    <form class="profile__content">
        <div>
            {{{ Avatar }}}
        </div>
        <div class="profile__content-input">
            {{{
             InputField
                    name="email"
                    label="Email"
                    type="email"
                    env="profile"
                    placeholder="test@yandex.ru"
                    ref="email"
                    validate=validate.email
            }}}

            {{{
            InputField
                    name="login"
                    label="Login"
                    type="text"
                    env="profile"
                    placeholder="ivanivanov"
                    ref="login"
                    validate=validate.login
            }}}

            {{{
            InputField
                    name="first_name"
                    label="First Name"
                    type="text"
                    env="profile"
                    placeholder="Ivan"
                    ref="first_name"
                    validate=validate.first_name
            }}}

            {{{
            InputField
                    name="second_name"
                    label="Second Name"
                    type="text"
                    env="profile"
                    placeholder="Ivanov"
                    ref="second_name"
                    validate=validate.second_name
            }}}

            {{{
            InputField
                    name="display_name"
                    label="Display Name"
                    type="text"
                    env="profile"
                    placeholder="Ivan"
                    ref="display_name"
                    validate=validate.display_name
            }}}

            {{{
            InputField
                    name="phone"
                    label="Phone Number"
                    type="text"
                    env="profile"
                    placeholder="+7(909)9673030"
                    ref="phone"
                    validate=validate.phone
            }}}
        </div>
        <div class="profile__content-button">
            {{{
            Button
                    text="Сохранить"
                    type="primary"
                    onClick=handleSaveChangesClick
            }}}
        </div>
    </form>
</main>
