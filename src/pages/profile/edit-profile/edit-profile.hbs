<main class="profile">
    {{{ Back onClick=handleBackClick }}}
    <form class="profile__content">
        <div>
            {{{ Avatar img=user.avatar }}}
        </div>
        <div class="profile__content-input">
            {{{
             InputField
                    name="email"
                    label="Email"
                    type="email"
                    env="profile"
                    placeholder=user.email
                    value=user.email
                    ref="email"
                    validate=validate.email
            }}}

            {{{
            InputField
                    name="login"
                    label="Login"
                    type="text"
                    env="profile"
                    placeholder=user.login
                    value=user.login
                    ref="login"
                    validate=validate.login
            }}}

            {{{
            InputField
                    name="first_name"
                    label="First Name"
                    type="text"
                    env="profile"
                    placeholder=user.firstName
                    ref="first_name"
                    value=user.firstName
                    validate=validate.first_name
            }}}

            {{{
            InputField
                    name="second_name"
                    label="Second Name"
                    type="text"
                    env="profile"
                    placeholder=user.secondName
                    ref="second_name"
                    value=user.secondName
                    validate=validate.second_name
            }}}

            {{{
            InputField
                    name="display_name"
                    label="Display Name"
                    type="text"
                    env="profile"
                    placeholder=user.displayName
                    ref="display_name"
                    value=user.displayName
                    validate=validate.display_name
            }}}

            {{{
            InputField
                    name="phone"
                    label="Phone Number"
                    type="text"
                    env="profile"
                    placeholder=user.phone
                    ref="phone"
                    value=user.phone
                    validate=validate.phone
            }}}
        </div>
        <div class="profile__content-button">
            {{{
            Button
                    text="Сохранить"
                    type="primary"
                    onClick=handleSaveChangesClick
            }}}
        </div>

        {{{ ErrorText error=error ref="errorText"}}}

        {{{ SuccessText success=success ref="successText" }}}
    </form>
</main>
