<main class="profile">
    <a class="profile__back" href="#">
        <div class="profile__back-icon">
            {{> BackArrow }}
        </div>
    </a>
    <div class="profile__content">
        <div>
            {{> Avatar}}
        </div>
        <div class="profile__content-input">
            {{> ProfileInput
                    name="Почта"
                    label="Email"
                    type="email"
                    env="profile"
                    placeholder="test@yandex.ru"
            }}
            {{> ProfileInput
                    name="login"
                    label="Login"
                    type="text"
                    env="profile"
                    placeholder="ivanivanov"
            }}
            {{> ProfileInput
                    name="first_name"
                    label="First Name"
                    type="text"
                    env="profile"
                    placeholder="Ivan"
            }}
            {{> ProfileInput
                    name="second_name"
                    label="Second Name"
                    type="text"
                    env="profile"
                    placeholder="Ivanov"
            }}
            {{> ProfileInput
                    name="display_name"
                    label="Display Name"
                    type="text"
                    env="profile"
                    placeholder="Ivan"
            }}
        </div>
        <div class="profile__content-button">
            {{> Button label="Сохранить" type="primary" page=""}}
        </div>
    </div>
</main>
